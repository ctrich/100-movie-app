<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Streambase | Home</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/styles/style.css" />
  <script src="/javascript/index.js" defer></script>
  <script src="/javascript/searchPagination.js" defer></script>
</head>

<body class="container bg-dark ff-sans-cond">
  <% results.concat(media) %>
  <% console.log(media, 'These are the results of media') %>

  <%- include('partials/header.ejs', { loggedIn: login }); %>
  <%- include('partials/loginModal.ejs') %>
  <main class="main-search">
    <div class="results-container flex">
      <% results.map(media => { %>
      <div class="result-item">
        <%- include('partials/mediaCard.ejs', { media: media }); %>
        <div class="result-item--info flex">
          <h4 class="fs-500"><%= media.name || media.title %></h4>
          <span><%= media.release_date || media.first_air_date %></span>
          <p><%= media.overview %></p>
        </div>
      </div>
      <%  }); %>
    </div>
    <form action="/search" method="GET">
      <input name="query" type="hidden" value="road" />
      <input name="page" type="hidden" value="2" />
      <input type="submit">
    </form>
  </main>
  <%- include('partials/footer.ejs'); %>
  <script src="/javascript/ejs.js">
    let options = {
    rootMargin: '0px',
    threshold: 1.0,
};
const resultsContainer = document.querySelector('.results-container');

const loadMore = async () => {
    const page = (function() {
        let page;
        return function() {
            return page++
        }
    })();
    try {
        const response = await fetch("/search?" + new URLSearchParams({
            query: 'road',
            page: 2,
        }));
        let data = await response.json()
        console.log(data.results.results)
        data.results.results.map(item => {
         let child = ejs.render('<%= mediaCard.ejs %>', {media: item})
          
          let movie = document.createElement('p');
          movie.innerHTML = item.id
          resultsContainer.appendChild(child)
        })
   
        // await response.json();
        
        console.log('This is the response', response)
    } catch(err) {
        console.log("script tag", err);
    }
}

let observer = new IntersectionObserver(loadMore, options);
observer.observe(document.querySelector('.footer-logo'))
  </script>