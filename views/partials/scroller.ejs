<div class="scroll-container text-white flex">
  <% movies.forEach(movie => { %>
  <div class="trailer-card relative">
    <img loading="lazy" 
        class="scroll-backdrop"
        srcset="<%= `${imageURL}w300${movie.backdrop_path} 300w,
              ${imageURL}w780${movie.backdrop_path} 780w` %>"  
        height="439" 
        width="780" 
        alt="" 
    />
    <img class="play-button" src="/images/play.png" alt="play button">
    <h4 class="text-center fs-500"><%= movie.title %></h4>
  </div>
  <% }) %>
</div>