<div class="scroller-container text-white flex">
  <% movies.forEach((movie, i) => { %>
  <div class="trailer-card relative">
    <img loading="lazy" class="trailer-backdrop" srcset="<%= `${imageURL}w300${movie.backdrop_path} 300w,
              ${imageURL}w780${movie.backdrop_path} 780w` %>" height="439" width="780" alt="" />
    <svg width="30%" height="auto" viewbox="0 0 50 50" class="trailer-play" xmlns="http://www.w3.org/2000/svg">
      <polygon points="9.33 6.69 9.33 19.39 19.3 13.04 9.33 6.69" />
      <path d="M26,13A13,13,0,1,1,13,0,13,13,0,0,1,26,13ZM13,2.18A10.89,10.89,0,1,0,23.84,13.06,10.89,10.89,0,0,0,13,2.18Z" />
    </svg>
    <h4 class="text-center fs-400"><%= movie.title %></h4>
  </div>
  <% }) %>
</div>

