<div data-visible="false" class="modal-container">
  <!-- X image to close modal-->
  <img id="modal-close" class="sign-in-close" src="/images/x-mark-48.png" alt="close">
  <!-- Main sign in window -->
  <div id="modal-main" data-visible="true" class="sign-in-modal modal-main">
    <h1>Sign <span>In</span></h1>
    <form action="/auth/google" method="GET">
      <button id="btn-sign-google" type="submit" class="sign-in-button">Sign in with Google</button>
    </form>
    <form action="/auth/facebook" method="GET">
      <button id="btn-sign-facebook" type="submit" class="sign-in-button">Sign in with Facebook</button>
    </form>
    <button id="btn-sign-email" class="sign-in-button">Sign in with email/password</button>
    <button id="btn-create" class="sign-in-button">Create an account</button>
  </div>
  <!-- Modal to select how to create an account -->
  <div id="modal-create" data-visible="false" class="sign-in-modal modal-create">
    <h1>Create account</h1>
    <button class="sign-in-button">Sign up with Google</button>
    <button class="sign-in-button">Sign up with Facebook</button>
    <button id="btn-create--email" class="sign-in-button">Sign up with email/password</button>
  </div>
  <!-- Modal to create an account using email and password-->
  <div id="modal-create--email" data-visible="false" class="sign-in-modal modal-create--email form">
    <h1 id="sign-up-email">Sign up with email</h1>
    <div id="errors" class="alert"></div>
    <form>
      <label for="create-email">
        <input id="create-email" name="email" type="email" placeholder="email">
      </label>
      <label for="create-password">
        <input id="create-password" name="password" type="password" placeholder="password">
      </label>
      <label for="confirm-password">
        <input id="confirm-password" name="confirmPassword" type="password" placeholder="confirm password">
      </label>
      <input id="create" class="btn-create" type="submit" value="Create">
    </form>
  </div>
  <!-- Modal to sign in using email and password-->
  <div id="modal-signin--email" data-visible="false" class="sign-in-modal modal-signin--email form">
    <h1>Sign <span>In</span></h1>
    <form action="/auth/login" method="POST">
      <label for="email">
        <input id="email" name="email" type="email" placeholder="email">
      </label>
      <label for="password">
        <input id="password" name="password" type="password" placeholder="password">
      </label>
      <input class="btn-create" type="submit" value="Sign In">
    </form>
  </div>
</div>